{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "jsx": "preserve",
    "module": "esnext"
  },
  "include": [
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "next.config.js",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/style.css",
    "dist/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
